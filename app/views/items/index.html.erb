<h1>Listing items order <%= params[:order_id] %>  supplier <%= params[:supplier_id] %></h1>

<table>
  <thead>
    <tr>
      <th>Order</th>
      <th>Supplier</th>
      <th>Product</th>
      <th>Name</th>
      <th>Note</th>
      <th>Minall</th>
      <th>Mingroup</th>
      <th>Minunit</th>
      <th>Kgxunit</th>
      <th>Unittype</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.order_id %></td>
        <td><%= item.supplier_id %></td>
        <td><%= item.product_id %></td>
        <td><%= item.name %></td>
        <td><%= item.note %></td>
        <td><%= item.minall %></td>
        <td><%= item.mingroup %></td>
        <td><%= item.minunit %></td>
        <td><%= item.kgxunit %></td>
        <td><%= item.unittype %></td>
        <td><%= item.price %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path(:order_id => params[:order_id], :supplier_id => params[:supplier_id]) %>
<%= link_to('Back', :controller => 'order_suppliers', :order_id => params[:order_id] ) %>

