<h1>Listing requests</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Unit</th>
      <th>Requested</th>
      <th>Received</th>
      <th>Priceini</th>
      <th>Priceend</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.item_id %></td>
        <td><%= request.unit_id %></td>
        <td><%= request.requested %></td>
        <td><%= request.received %></td>
        <td><%= request.priceini %></td>
        <td><%= request.priceend %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Request', new_request_path %>
