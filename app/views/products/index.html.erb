<h1>Listing products <%= @supplier.name if @supplier %> </h1>

<table>
  <thead>
    <tr>
      <th>Supplier</th>
      <th>Name</th>
      <th>Imageurl</th>
      <th>Active</th>
      <th>Note</th>
      <th>Minall</th>
      <th>Mingroup</th>
      <th>Minunit</th>
      <th>Kgxunit</th>
      <th>Unittype</th>
      <th>Price</th>
      <th>Priceold</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.supplier.name if product.supplier %></td>
        <td><%= product.name %></td>
        <td><%= product.imageurl %></td>
        <td><%= product.active %></td>
        <td><%= product.note %></td>
        <td><%= product.minall %></td>
        <td><%= product.mingroup %></td>
        <td><%= product.minunit %></td>
        <td><%= product.kgxunit %></td>
        <td><%= product.unittype %></td>
        <td><%= product.price %></td>
        <td><%= product.priceold %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure? ' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= if @supplier 
      link_to 'New Product', new_product_path(:supplier_id => @supplier.id) 
		else
      link_to 'New Product', new_product_path 
		end
%>

<br>

<%= link_to('Back', :controller => 'suppliers' ) %>
