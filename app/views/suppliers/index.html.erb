<h1>Listing suppliers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Telefone</th>
      <th>Url</th>
      <th>Active</th>
      <th>Note</th>
      <th>Frecuency</th>
      <th>Ranking</th>
      <th>Account</th>
      <th>Group</th>
      <th>Watcher unit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= supplier.name %></td>
        <td><%= supplier.email %></td>
        <td><%= supplier.telefone %></td>
        <td><%= supplier.url %></td>
        <td><%= supplier.active %></td>
        <td><%= supplier.note %></td>
        <td><%= supplier.frecuency %></td>
        <td><%= supplier.ranking %></td>
        <td><%= supplier.account_id %></td>
        <td><%= supplier.group_id %></td>
        <td><%= supplier.watcher_unit_id %></td>
        <td><%= link_to 'Products', {:controller => 'products', 
										:supplier_id => supplier.id , :action => 'index'} %> </td>
        <td><%= link_to 'Show', supplier %></td>
        <td><%= link_to 'Edit', edit_supplier_path(supplier) %></td>
        <td><%= link_to 'Destroy', supplier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Supplier', new_supplier_path %>
