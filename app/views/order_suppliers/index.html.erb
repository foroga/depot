<h1>Listing suppliers of order <%= @order.id %> </h1>

<table>
  <thead>
    <tr>
      <th>Order</th>
      <th>Supplier</th>
      <th>Group</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_suppliers.each do |order_supplier| %>
      <tr>
        <td><%= order_supplier.order_id %></td>
        <td><%= order_supplier.supplier.name %></td>
        <td><%= order_supplier.group_id %></td>
        <td><%= order_supplier.position %></td>
        <td><%= link_to 'Items', {:controller => 'items', 
										:order_id => order_supplier.order_id, 
										:supplier_id => order_supplier.supplier_id, 
										:action => 'index'} %>
        <td><%= link_to 'Show', order_supplier %></td>
        <td><%= link_to 'Edit', edit_order_supplier_path(order_supplier) %></td>
        <td><%= link_to 'Destroy', order_supplier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Order supplier', new_order_supplier_path(:order_id => @order.id) %>
<br>
<%= link_to 'Back', :controller => 'orders' %>

