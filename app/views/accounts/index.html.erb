<h1>Listing accounts</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Concept</th>
      <th>Amountini</th>
      <th>Amountend</th>
      <th>State</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.date %></td>
        <td><%= account.concept %></td>
        <td><%= account.amountini %></td>
        <td><%= account.amountend %></td>
        <td><%= account.state %></td>
        <td><%= account.note %></td>
        <td><%= link_to 'Show', account %></td>
        <td><%= link_to 'Edit', edit_account_path(account) %></td>
        <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Account', new_account_path %>
